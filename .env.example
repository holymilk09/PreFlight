# Database
DATABASE_URL=postgresql://controlplane:controlplane@localhost:5432/controlplane
TIMESCALE_URL=postgresql://metrics:metrics@localhost:5433/metrics
REDIS_URL=redis://localhost:6379

# Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# Temporal
TEMPORAL_HOST=localhost:7233
TEMPORAL_NAMESPACE=controlplane

# Trillian (Merkle tree audit log)
TRILLIAN_LOG_SERVER=localhost:8090

# Authentication
JWT_SECRET=change-this-to-a-secure-random-string
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60
API_KEY_SALT=change-this-to-a-secure-random-string

# Feature Flags
ENABLE_FEDERATED_LEARNING=false
ENABLE_CROSS_CUSTOMER_BENCHMARKS=false

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
API_WORKERS=1

# Rate Limiting
RATE_LIMIT_PER_MINUTE=1000
