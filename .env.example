# =============================================================================
# SECURITY NOTICE: Generate unique secrets before use!
# Run: openssl rand -hex 32
# =============================================================================

# -----------------------------------------------------------------------------
# Database Credentials (REQUIRED - docker-compose will fail without these)
# -----------------------------------------------------------------------------
POSTGRES_USER=controlplane
POSTGRES_PASSWORD=GENERATE_SECURE_PASSWORD_HERE
POSTGRES_DB=controlplane

TIMESCALE_USER=metrics
TIMESCALE_PASSWORD=GENERATE_SECURE_PASSWORD_HERE
TIMESCALE_DB=metrics

REDIS_PASSWORD=GENERATE_SECURE_PASSWORD_HERE

# -----------------------------------------------------------------------------
# Connection URLs (update passwords to match above)
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@localhost:5432/${POSTGRES_DB}
TIMESCALE_URL=postgresql://${TIMESCALE_USER}:${TIMESCALE_PASSWORD}@localhost:5433/${TIMESCALE_DB}
REDIS_URL=redis://:${REDIS_PASSWORD}@localhost:6379

# -----------------------------------------------------------------------------
# Kafka
# -----------------------------------------------------------------------------
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# -----------------------------------------------------------------------------
# Temporal
# -----------------------------------------------------------------------------
TEMPORAL_HOST=localhost:7233
TEMPORAL_NAMESPACE=controlplane

# -----------------------------------------------------------------------------
# Trillian (Merkle tree audit log)
# -----------------------------------------------------------------------------
TRILLIAN_LOG_SERVER=localhost:8090

# -----------------------------------------------------------------------------
# Authentication (REQUIRED - generate secure values!)
# -----------------------------------------------------------------------------
# Generate with: openssl rand -hex 32
JWT_SECRET=GENERATE_WITH_openssl_rand_-hex_32
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60

# Generate with: openssl rand -hex 32
API_KEY_SALT=GENERATE_WITH_openssl_rand_-hex_32

# -----------------------------------------------------------------------------
# CORS Security (comma-separated list of allowed origins)
# -----------------------------------------------------------------------------
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
ENABLE_FEDERATED_LEARNING=false
ENABLE_CROSS_CUSTOMER_BENCHMARKS=false
ENABLE_DOCS=true  # Set to false in production

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FORMAT=json

# -----------------------------------------------------------------------------
# API Settings
# -----------------------------------------------------------------------------
API_HOST=127.0.0.1
API_PORT=8000
API_RELOAD=true
API_WORKERS=1

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_PER_MINUTE=1000
